<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    >
    <RelativeLayout
        android:id="@+id/home_title_rel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:id="@+id/home_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="12:24"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"/>
        <ImageView
            android:id="@+id/home_weather_img"
            android:layout_toLeftOf="@+id/home_time_txt"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cloud"/>
        <ImageView
            android:id="@+id/home_wifi_img"
            android:layout_toLeftOf="@+id/home_weather_img"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/home_wifi"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_below="@+id/home_title_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

    </FrameLayout>
</RelativeLayout>
